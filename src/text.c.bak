#include "text.h"
#include "error.h"

#include <ft2build.h>
#include FT_FREETYPE_H


TextTXContext* text_tx_create(const char* fontfile, int fontsize) {
	FT_Library lib;
	ASSERT(FT_Init_FreeType(&lib), "Could not initialize FreeType");
	FT_Face face;
	ASSERT(FT_New_Face(library, fontfile, 0, &face, "Could not create FreeType face");
}

