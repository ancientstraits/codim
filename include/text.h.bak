#ifndef CODIM_TEXT_H
#define CODIM_TEXT_H

// `text.h` offers various utilities for text in Codim.

#include <stdint.h>

// A rectangle that makes up a section of a texture.
typedef struct TextTXCoord {
	uint32_t x, y, width, height;
} TextTXCoord;

// TextTXContext (text texture context) holds a generated texture,
// along with its texture coordinates.
typedef struct TextTXContext {
	// 0 least brightness, 255 is full brightness
	uint8_t* buf;
	uint32_t width, height;
	TextureCoordRect_t* coords;
	uint32_t num_coords;
} TextTXContext;

// Creates and allocates a `TextTXContext`.
TextTXContext* text_tx_create(const char* fontfile, int fontsize);
// Frees the memory in a `TextTXContext`.
void text_tx_destroy(TextTXContext* ttxc);

#endif // !CODIM_TEXT_H
